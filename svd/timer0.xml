<peripheral>
  <name>TIMER0</name>
  <baseAddress>0x35</baseAddress>

  <addressBlock>
    <offset>0x00</offset>
    <size>0x01</size>
    <usage>registers</usage>
  </addressBlock>
  <addressBlock>
    <offset>0x0F</offset>
    <size>0x05</size>
    <usage>registers</usage>
  </addressBlock>
  <addressBlock>
    <offset>0x39</offset>
    <size>0x01</size>
    <usage>registers</usage>
  </addressBlock>

  <registers>
    <register>
      <name>TIFR0</name>
      <description>Timer0 Interrupt Flag Register</description>
      <addressOffset>0x00</addressOffset>

      <fields>
        <field>
          <name>OCF0B</name>
          <description>Timer0 Output Compare B Match Flag</description>
          <bitRange>[2:2]</bitRange>
        </field>
        <field>
          <name>OCF0A</name>
          <description>Timer0 Output Compare A Match Flag</description>
          <bitRange>[1:1]</bitRange>
        </field>
        <field>
          <name>TOV0</name>
          <description>Timer0 Overflow Flag</description>
          <bitRange>[0:0]</bitRange>
        </field>
      </fields>
    </register>
    <register>
      <name>TCCR0A</name>
      <description>Timer0 Control Register A</description>
      <addressOffset>0x0F</addressOffset>

      <fields>
        <field>
          <name>COM0A</name>
          <description>Compare Match Output A Mode</description>
          <bitRange>[7:6]</bitRange>
        </field>
        <field>
          <name>COM0B</name>
          <description>Compare Match Output B Mode</description>
          <bitRange>[5:4]</bitRange>
        </field>
        <field>
          <name>WGM0</name>
          <description>Waveform Generation Mode, used together with WGM02 from TCCR0B</description>
          <bitRange>[1:0]</bitRange>
        </field>
      </fields>
    </register>
    <register>
      <name>TCCR0B</name>
      <description>Timer0 Control Register B</description>
      <addressOffset>0x10</addressOffset>

      <fields>
        <field>
          <name>FOC0A</name>
          <description>Force Output Compare A</description>
          <bitRange>[7:7]</bitRange>
          <access>write-only</access>
        </field>
        <field>
          <name>FOC0B</name>
          <description>Force Output Compare B</description>
          <bitRange>[6:6]</bitRange>
          <access>write-only</access>
        </field>
        <field>
          <name>WGM02</name>
          <description>Waveform Generation Mode</description>
          <bitRange>[3:3]</bitRange>
        </field>
        <field>
          <name>CS0</name>
          <description>Clock Select</description>
          <bitRange>[2:0]</bitRange>
        </field>
      </fields>
    </register>
    <register>
      <name>TCNT0</name>
      <description>Timer0 Register</description>
      <addressOffset>0x11</addressOffset>
    </register>
    <register>
      <name>OCR0A</name>
      <description>Timer0 Output Compare Register A</description>
      <addressOffset>0x12</addressOffset>
    </register>
    <register>
      <name>OCR0B</name>
      <description>Timer0 Output Compare Register B</description>
      <addressOffset>0x13</addressOffset>
    </register>
    <register>
      <name>TIMSK0</name>
      <description>Timer0 Interrupt Mask Register</description>
      <addressOffset>0x39</addressOffset>

      <fields>
        <field>
          <name>OCIE0B</name>
          <description>Output Compare Match B Interrupt Enable</description>
          <bitRange>[2:2]</bitRange>
        </field>
        <field>
          <name>OCIE0A</name>
          <description>Output Compare Match A Interrupt Enable</description>
          <bitRange>[1:1]</bitRange>
        </field>
        <field>
          <name>TOIE0</name>
          <description>Overflow Interrupt Enable</description>
          <bitRange>[0:0]</bitRange>
        </field>
      </fields>
    </register>
  </registers>
</peripheral>
